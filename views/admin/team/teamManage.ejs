<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../../partials/header.ejs")%>
    <style>

        body{
            background-color: #EAEBEF !important;
        }
        .team.container{
            background-color: white;
            box-shadow: rgba(153, 153, 153, 0.2) 0px 2px 5px 0px !important;
            padding: 2em 3em;
            border-radius: 10px;
        }

        .card img{
            width: 250px;
            height: 250px;
            object-fit: contain;
        }
        .card-body{
            padding: 1.5em;
        }
        .card-body h5{
            margin-bottom: 1em;
            font-size: 1.75em;
        }
    </style>
</head>
<body>
    <%- include("../../partials/nav.ejs")%>
    <div class="team container my-2">
        <h3 class="mb-3">จัดการข้อมูลทีม</h3>
        <!-- <hr> -->
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/admin" class="text-decoration-none">แอดมิน</a></li>
            <li class="breadcrumb-item active" aria-current="page">จัดการข้อมูลทีม</li>
        </ol>
        <%if(teams.length==0){%>
            <h2>There's no teams</h2>
        <%}%>
        <div class="d-gird" style="grid-template-columns: repeat(4, 1fr);">
            <%for (const team of teams){%>
                <div class="card" style="width: fit-content;">
                    <img src="/images/teams/<%= team.logo%>" class="card-img-top" alt="<%= team.teamname%>">
                    <div class="card-body">
                      <h5 class="card-title"><%= team.teamname%></h5>
                      <a href="/admin/team/<%= team.id%>" class="btn btn-primary d-block">Team Infomation</a>
                    </div>
                </div>
            <%}%>
        </div>
        

    </div>
</body>
</html>

