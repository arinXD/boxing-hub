<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <%- include("../partials/header.ejs")%>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Athlete Confirmation Page</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            window.onload = () => {
                if (`<%= status%>`) {
                    Swal.fire(
                        'สำเร็จ!',
                        'ยืนยันการสมัครเรียบร้อย',
                        'success'
                    )
                }
            }
        </script>
</head>

<body>
    <%- include("../partials/nav.ejs")%>
        <div class="container mt-5">
            <h1 class="mb-3">Athlete Confirmation Page</h1>
            <div class="table-responsive">
                <table class="table mt-5">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>AKA</th>
                            <th>Weight</th>
                            <th>Height</th>
                            <th>Team</th>
                            <th class="text-center">Confirmation</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if (athletesData.length==0) { %>
                            <tr>
                                <th class="text-center" scope="row" colspan="6">ไม่มีข้อมูลนักกีฬา</th>
                            </tr>

                            <% }else { athletesData.forEach(athlete=> { %>

                                <tr>
                                    <td class="align-middle">
                                        <%= athlete.user.fname %>
                                            <%= athlete.user.lname %>
                                    </td>
                                    <td class="align-middle">
                                        <%= athlete.nickname %>
                                    </td>
                                    <td class="align-middle">
                                        <%= athlete.weight %>
                                    </td>
                                    <td class="align-middle">
                                        <%= athlete.height %>
                                    </td>
                                    <td class="align-middle">
                                        <% if(athlete.team){%>
                                            <%= athlete.team.teamname %>
                                                <%}else{%>
                                                    no team
                                                    <%}%>


                                    </td>

                                    <td style="width: 205px;" class="text-center">
                                        <a class="btn btn-warning w-50 fw-bold" href="/admin/info/<%=athlete._id%>"
                                            class="mr-2">INFO</a>
                                    </td>
                                </tr>
                                <% }); } %>
                    </tbody>
                </table>
            </div>
            
        </div>
</body>

</html>