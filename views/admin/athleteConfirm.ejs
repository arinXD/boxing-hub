<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <%- include("../partials/header.ejs")%>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Athlete Confirmation Page</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            window.onload = () => {
                if (`<%= status%>`) {
                    Swal.fire(
                        'สำเร็จ!',
                        'ยืนยันการสมัครเรียบร้อย',
                        'success'
                    )
                }
            }
        </script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <style>
                tr{
                    border: 1px solid #dee2e6 !important;
                }
                thead{
                    border: 1px solid black !important;

                }
            </style>
</head>

<body>
    <%- include("../partials/nav.ejs")%>
        <div class="container mt-5">
            <h1 class="mb-3">Athlete Confirmation Page</h1>
            <div>
                <table class="table table-striped table-hover mt-5">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>AKA</th>
                            <th>Weight</th>
                            <th>Height</th>
                            <th>Team</th>
                            <th class="text-center">Confirmation</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if (athletesData.length==0) { %>
                            <tr>
                                <th class="text-center" scope="row" colspan="6">ไม่มีข้อมูลนักกีฬา</th>
                            </tr>

                            <% }else { athletesData.forEach(athlete=> { %>

                                <tr>
                                    <td class="align-middle">
                                        <%= athlete.user.fname %>
                                            <%= athlete.user.lname %>
                                    </td>
                                    <td class="align-middle">
                                        <%= athlete.nickname %>
                                    </td>
                                    <td class="align-middle">
                                        <%= athlete.weight %>
                                    </td>
                                    <td class="align-middle">
                                        <%= athlete.height %>
                                    </td>
                                    <td class="align-middle">
                                        <% if(athlete.team){%>
                                            <%= athlete.team.teamname %>
                                                <%}else{%>
                                                    no team
                                                    <%}%>


                                    </td>

                                    <td style="width: 205px;" class="text-center">
                                        <a class="btn btn-warning w-50 fw-bold" href="/admin/info/<%=athlete._id%>"
                                            class="mr-2">INFO</a>
                                    </td>
                                </tr>
                                <% }); } %>
                    </tbody>
                </table>
                <table class="table table-striped table-hover mt-5">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>AKA</th>
                            <th>Weight</th>
                            <th>Height</th>
                            <th>Team</th>

                        </tr>
                    </thead>

                    <tbody>
                        <% if (athletes.length==0) { %>
                            <tr>
                                <th class="text-center" scope="row" colspan="6">ไม่มีข้อมูลนักกีฬา</th>
                            </tr>

                            <% }else { athletes.forEach(athlete=> { %>

                                <tr>
                                    <td class="align-middle">
                                        <%= athlete.user.fname %>
                                            <%= athlete.user.lname %>
                                    </td>
                                    <td class="align-middle">
                                        <%= athlete.nickname %>
                                    </td>
                                    <td class="align-middle">
                                        <%= athlete.weight %>
                                    </td>
                                    <td class="align-middle">
                                        <%= athlete.height %>
                                    </td>
                                    <td class="align-middle">
                                        <% if(athlete.team){%>
                                            <%= athlete.team.teamname %>
                                                <%}else{%>
                                                    no team
                                                    <%}%>


                                    </td>
                                </tr>
                                <% }); } %>
                    </tbody>
                </table>
            </div>

        </div>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
            crossorigin="anonymous"></script>

</body>

</html>